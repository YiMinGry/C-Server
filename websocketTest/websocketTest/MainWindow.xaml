<!--MainWIndow.xaml-->
<Window x:Class="websocketTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:websocketTest"
        mc:Ignorable="d"
        Title="MGServer" Height="500" Width="730">
    <Grid Margin="0,0,0,0">
        <Button Name ="Stop" Content="Stop" HorizontalAlignment="Right" VerticalAlignment="Top" Width="165" Margin="0,435,10,0" Click="Stop_Click" Height="39"/>
        <TextBox Name ="Console" AcceptsReturn="True" Height="410" TextWrapping="Wrap" Text="" IsReadOnly ="True" VerticalAlignment="Top" Margin="10,20,12,0"/>
        <!-- TextBox의 AcceptsReturn이 트루이면 엔터키를 먹는 텍스트박스가 됨. IsReadOnly가 트루면 읽기 전용-->
    </Grid>
</Window>