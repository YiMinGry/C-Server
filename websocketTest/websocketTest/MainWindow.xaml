<!--MainWIndow.xaml-->
<Window x:Class="websocketTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:websocketTest"
        mc:Ignorable="d"
        Title="MGServer" Height="510" Width="730">
    <Grid HorizontalAlignment="Center" Width="730" VerticalAlignment="Center" Height="450">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name ="Stop" Content="Stop" Margin="556,400,20,20" Click="Stop_Click"/>
        <TextBox Name ="Console" AcceptsReturn="True" TextWrapping="Wrap" Text="" IsReadOnly ="True" Margin="20,10,20,74" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" HorizontalAlignment="Stretch"/>
        <!-- TextBox의 AcceptsReturn이 트루이면 엔터키를 먹는 텍스트박스가 됨. IsReadOnly가 트루면 읽기 전용-->
    </Grid>
</Window>